<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Banking QA Automation Suite" parallel="tests" thread-count="3" verbose="1">

    <test name="Smoke Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="env" value="QA"/>
        <classes>
            <class name="com.banking.runners.SmokeTestRunner"/>
        </classes>
    </test>

    <test name="API Tests">
        <classes>
            <class name="com.banking.runners.APITestRunner"/>
        </classes>
    </test>

    <test name="Regression Tests">
        <parameter name="browser" value="chrome"/>
        <parameter name="env" value="QA"/>
        <classes>
            <class name="com.banking.runners.RegressionTestRunner"/>
        </classes>
    </test>

    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
    </listeners>
</suite>
